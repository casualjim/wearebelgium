-@ val title: String
-@ val body: String

!!! 5
html
  head
    title= title
    meta(charset="utf-8")
    link(rel='stylesheet' href='/assets/main.css')
    :css
      body {
        padding-top: 80px; /* 80px to make the container go all the way to the bottom of the topbar */
      }

  body
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href="/") We Are Belgium
          div.nav-collapse
            ul.nav
              li
                a(href="/") Home              
          div.nav-collapse.pull-right
            ul.nav
              - if (isAnonymous)
                li
                  a(href="/auth/twitter") Login
              - else
                li
                  a(href="/logout") Logout
              



    div.container
      - if (flash.get("success").isDefined)
        div.alert.alert-success.fade.in
          a.close(data-dismiss="alert") ×
          != flash("success")
      - if (flash.get("info").isDefined)
        div.alert.alert-info.fade.in
          a.close(data-dismiss="alert") ×
          != flash("info")
      - if (flash.get("warn").isDefined)
        div.alert.alert-success.fade.in
          a.close(data-dismiss="alert") ×
          != flash("warn")
      - if (flash.get("error").isDefined)
        div.alert.alert-error.fade.in
          a.close(data-dismiss="alert") ×
          != flash("error")
      != body


    script(src="/assets/main.js")



